extends layout 

block content 
  h1= title 
  h2= category.name 
  p= category.description
  br
  if items
   p Delete this item(s) first before proceeding to delete the category!
    ul 
      each item in items
        li  
          a(href=item.url) #{item.name} 
          | ( $#{item.price}  ) 
          a(href=item.url + '/delete') Delete
  else
    p Are you really sure to delete this Category? 

    form(method='POST' action='')
        div.form-group
        input#categoryID.form-control(type='hidden',name='categoryID', required='true', value=category._id )

        button.btn.btn-primary(type='submit') Delete
